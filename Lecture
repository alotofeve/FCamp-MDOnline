LectureController:

postLecture:
/POST /postLecture
INPUT{
  title: string
  body: string
}
OUTPUT{
  isSaved: Boolean
}

getLectureByDoctor:
/GET /getLectureByDoctor
INPUT{
  doctorID: Int
}
OUTPUT{
  lectureList
}

getLectureByPatient:
/GET /getLectureByPatient
INPUT{
  patientID: Int
}
OUTPUT{
  lectureList
}

deleteLecture:
/POST /deleteLecture
INPUT{
  lectureID: Int
  doctorID: Int
}
OUTPUT{
  isDeleted: Boolean
}

favouriteLecture:
/POST /favouriteLecture
INPUT{
  patientID: Int
  lectureID: Int
}
OUTPUT{
  isFavourite: Boolean
}

unfavouriteLecture
/POST /unfavouriteLecture
INPUT{
  patientID: INT
  lectureID: INT
}
OUTPUT{
  unfavourite: boolean
}
