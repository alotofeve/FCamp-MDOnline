AppointmentController:

Create:
/POST "/createAppointment"
INPUT{
  Departmet: String
  Date:String
  DoctorName: String
  Description: String
}
OUTUT{
  isCreated: Boolean
}

Cancel:
/POST "/cancelAppointment"
INPUT{
  Departmet: String
  Date:String
  DoctorName: String
  Description: String
}
OUTPUT{
  isCancelled:
}


SearchController:

SearchDoctor:
/GET /"searchDoctorByName"
INPUT{
  DoctorName: String
}
OUTPUT{
  DoctorList:List<Doctor>
}

SearchBySpec
/GET /"searchDoctorBySpec"
INPUT{
  Spec: String
}
OUTPUT{
  DoctorList:List<Doctor>
}

SearchByBoth
/GET /"searchDoctorByAll"
INPUT{
  DoctorName: string
  Spec: String
}
OUTPUT{
  DoctorList:List<Doctor>
}

LectureController:

postLecture:
/POST /postLecture
INPUT{
  lecture: List<E>
}
OUTPUT{
  isSaved: Boolean
}

getLecture:
/GET /getLecture
INPUT{
  lectureID: Int
}
OUTPUT{
  lecture: Lecture object
}

deleteLecture:
/POST /deleteLecture
INPUT{
  lectureID: Int
}
OUTPUT{
  isDeleted: Boolean
}


